@model Boletin_Ejercicio_5.DataBase.Models.Producto

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Detalle del producto </h3>

<div class="container-fluid ">

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Fabricante)
        </th>
        <th></th>
            <th></th>
       
    </tr>
    </thead>
        <tbody>
            <tr>
                <td>
  
            @Html.DisplayFor(model => model.Codigo)
    </td>
    <td>
            @Html.DisplayFor(model => model.Nombre)
    </td>
    <td>
            @Html.DisplayFor(model => model.Precio)
    </td>
    <td>
            @Html.DisplayFor(model => model.Codigo_Fabricante)
    </td>
            <td>

                <form action="@Url.Action("ListaProducto", "Fabricante", new { id = Model.Codigo })" method="get">
                    <input type="hidden" name="codigo" value="@Model.Codigo." />

                    <button type="submit" class="btn btn-outline-primary btn-smaller">Ir a la lista </button>
                </form>

            </td>
            <td>

                    <form action="@Url.Action("Edit", "Edit", new { id = Model.Codigo })" method="get">
                    <input type="hidden" name="codigo" value="@Model.Codigo." />

                    <button type="submit" class="btn btn-outline-primary btn-smaller">Editar </button>
                </form>

            </td>
    </tr>
    </tbody>
    
    </table>
    
    </div>
