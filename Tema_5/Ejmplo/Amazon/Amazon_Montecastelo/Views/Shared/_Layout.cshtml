<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amazon_Montecastelo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Amazon_Montecastelo.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="adminHeader">
        <nav class="navbar navbar-dark bg-dark">
            <ul class="navbar">
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Producto", "Administrador")">Producto</a>
                </li>
              
                    <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Producto", "Usuario")">Producto</a>
                    </li>
                    <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Carrito", "Usuario")">Carrito</a>
                    </li>
           
            </ul>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
