@model IEnumerable<Amazon_Montecastelo.Database.Models.Usuario>

@{
    ViewData["Title"] = "Logueate";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />


}
<html>
<body>
        <div class="container">

            <div class="row justify-content-center">

                <div class="col-lg-5">

                    <div class="card  border-3 rounded-lg mt-5 ">

                        <div class="card-header"><h2 class="text-center font-weight-light my-4"> Iniciar sesion</h2></div>

                        <div class=" card-body">
                            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <p style="color: red;">@ViewBag.ErrorMessage</p>
                            }
                            <form id="loginForm" action="@Url.Action("DoLogin", "Login")" method="post">

                                <div class="card-header2 form-floating  mb-3">

                                   

                                    <input class="form-control" id="inputEmail" name="Email" type="Email" placeholder="Correo electrónico" />
                                    <label class="usuario" for="inputEmail">Correo electrónico</label>


                                </div>
                                <div class="card-header3 form-floating  mb-3">

                                    <input class="form-control" id="inputpassword" name="password" type="password" placeholder="Contraseña" />

                                    <label class="usuario2" for="password">Contraseña</label>

                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">


                                    <button type="submit" class="btn btn-primary mx-auto">Iniciar Sesión</button>

                                </div>

                            </form>
                            <div class="card-footer text-center py-3">
                                <div class="">
                                    ¿No tienes cuenta? <a href="@Url.Action("Agregar", "Login")">Registrate</a>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <script>

            //Validaciones o acciones adicionales en el formulario antes de que los datos sean enviados al servidor.

            $(document).ready(function () {

                $('#loginForm').submit(function (event) {

                    event.preventDefault();


                });

            });

        </script>

</body>

</html>