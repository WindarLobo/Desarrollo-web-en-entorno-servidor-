@model IEnumerable<Amazon_Montecastelo.Database.Models.Usuario>

@{
    ViewData["Title"] = "Logueate";
}
<html>

<body>
    <!--Los campos de entrada están dentro de elementos <div> con clases específicas para aplicar estilos y diseño. -->

   

        <div id="layoutAuthentication_content">

            <div class="container">

                <div class="row justify-content-center">

                    <div class="col-lg-5">

                        <div class="card shadow-lg border-0 rounded-lg mt-5">

                            <div class="card-header"><h2 class="text-center font-weight-light my-4"> <i class="fas fa-circle-user"></i></h2></div>

                            <div class=" card-body">
                                 @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <p style="color: red;">@ViewBag.ErrorMessage</p>
                                }
                                <form id="loginForm" action="@Url.Action("DoLogin", "Usuario")" method="post">

                                    <div class="card-header2 form-floating  mb-3">

                                        <i class="fas fa-circle-user"></i>

                                    <input class="form-control" id="inputEmail" name="Email" type="Email" placeholder="Correo electrónico" />
                                    <label class="usuario" for="inputEmail">Correo electrónico</label>


                                    </div>
                                    <div class="card-header3 form-floating  mb-3">

                                        <i class="fa fa-lock"></i>

                                        <input class="form-control" id="inputpassword" name="password" type="password" placeholder="Contraseña" />

                                        <label class="usuario2" for="password">Contraseña</label>

                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                                        <!-- Un botón secundario que, al hacer clic en él, redirige al usuario a la acción "DoLogin" del controlador "Login".-->

                                        <button type="submit" class="btn btn-primary mx-auto">Iniciar Sesión</button>

                                    </div>

                                </form>
                                <div class="card-footer text-center py-3">
                                    <div class="">
                                        ¿No tienes cuenta? <a href="@Url.Action("agregar", "Usuario")">Registrate</a>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <script>

                //Validaciones o acciones adicionales en el formulario antes de que los datos sean enviados al servidor.

                $(document).ready(function () {

                    $('#loginForm').submit(function (event) {

                        event.preventDefault();


                    });

                });

            </script>

        </div>

</body>

</html>