@model IEnumerable<Amazon_Montecastelo.Database.Models.Productos>

@{
    ViewData["Title"] = "Productos";

    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


}
<div class="container-fluid h-100 d-flex justify-content-center align-items-center">

    <div class="row">
        <div class="col-md-9 text-center">
            <h1>Productos</h1>
        </div>
        <div class="col-md-3 ml-5 mt-3">
            <form action="@Url.Action("Agregar", "Amazon")" method="get">
                <input type="hidden" name="id" />
                <button type="submit" class="btn btn-primary">Agregar Producto</button>
            </form>
        </div>
        <div class="col mt-5">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ProductoID)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th ></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductoID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio) €</td>
                            <td>
                            
                                <div class="button-container">
                                    <form action="@Url.Action("Edit", "Amazon", new { id = item.ProductoID })" method="get">
                                        <input type="hidden" name="id" />
                                        <button type="submit" class="btn btn-outline-primary btn-smaller">Editar</button>
                                    </form>
                                </div>
                            </td>
                            <td >
                                <div class="button-container">
                                    <form action="@Url.Action("Delete", "Amazon", new { id = item.ProductoID })" method="get">
                                        <input type="hidden" name="id" />
                                        <button type="submit" class="btn btn-outline-primary btn-smaller">Eliminar</button>
                                    </form>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



