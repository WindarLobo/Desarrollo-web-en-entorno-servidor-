@model LoboGarcesWindarTarea4.Models.PokemonViewModel

@{
    ViewData["Title"] = "ListaEquipo";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h1>ListaEquipo</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                PokemonId
            </th>
            <th>
                NombrePokemon
            </th>
            <th>
                Peso
            </th>
            <th>
                Altura
            </th>
            <th>
                AllTipos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Equipo.Pokemons)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PokemonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePokemon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllTipos)

                </td>


                <td>

                    @Html.ActionLink("Detalle", "Detalle", new { numero_Pokedex = item.PokemonId  })
                </td>
            </tr>


        }


    </tbody>
 
        <tfoot>
            <tr>
                <td colspan="6">
                    Cantidad de pokemons: @Model.Count <br />
                    Peso Promedio : @Model.PesoPromedio<br />
                    Altura promedio : @Model.AturaPromedio<br />
                    <p>
                        Tipos predominantes:

                        @Model.TipoPromedio


                    </p>
                </td>
            </tr>
        </tfoot>
    

</table>
