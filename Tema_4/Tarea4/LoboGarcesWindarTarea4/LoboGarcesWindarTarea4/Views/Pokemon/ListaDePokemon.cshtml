@model IEnumerable<LoboGarcesWindarTarea4.DataBase.Dbo.PokemonDbo>

@{
    ViewData["Title"] = "ListaDePokemon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListaDePokemon</h1>

<form id="formFiltrarPorPeso" action="/Pokemon/FiltrarPokemon" method="get">
    <div>
        <label for="textPeso">Peso:</label>
        <input type="text" id="textPeso" name="peso" />
        <button type="submit">Buscar</button>
    </div>
</form>

<form id="formFiltrarPorAltura" action="/Pokemon/FiltrarPokemon" method="get">
    <div>
        <label for="textAltura">Altura:</label>
        <input type="text" id="textAltura" name="Altura" />
        <button type="submit">Buscar </button>
    </div>
</form>
