<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PokemonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePokemon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPokemon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PokemonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombrePokemon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPokemon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.ActionLink("Detalle", "GetById", new { numero_Pokedex = item.PokemonId  }) |
                    @Html.ActionLink("Evolucion", "Evolucion", new { numero_Pokedex = item.PokemonId  }) |
                    @Html.ActionLink("Movimientos", "Movimiento", new {numero_Pokedex = item.PokemonId})

                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function FiltrarPokemon() {
        var inputPeso = document.getElementById('textPeso').value;
        document.getElementById('formFiltrarPorPeso').elements['peso'].value = inputPeso;
        document.getElementById('formFiltrarPorPeso').submit();
    }

    function FiltrarAltura() {
        var inputAltura = document.getElementById('textAltura').value;
        document.getElementById('formFiltrarPorAltura').elements['Altura'].value = inputAltura;
        document.getElementById('formFiltrarPorAltura').submit();
    }
</script>