@model IEnumerable<LoboGarcesWindarTarea3.Database.Models.Profesor>

@{
    ViewData["Title"] = "Lista";
    <link rel="stylesheet" href="~/css/view.css" asp-append-version="true" />

}

<h1 class="mt-4">Profesores</h1>
<table class=" table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.materia)</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.materia)
                </td>
                <td scope="row">
                    <form action="@Url.Action("Detalles","Profesor")" method="get">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn  btn-outline-danger">Detalles</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>